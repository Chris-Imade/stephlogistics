                <div class="form-group">
                  <label for="email">Email Address*</label>
                  <input
                    type="email"
                    id="email"
                    class="form-control"
                    required
                  />
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="phone">Phone Number*</label>
                  <input type="tel" id="phone" class="form-control" required />
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="location">Preferred Location*</label>
                  <input
                    type="text"
                    id="location"
                    class="form-control"
                    required
                  />
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="investment">Available Investment*</label>
                  <select id="investment" class="form-control" required>
                    <option value="">Select Range</option>
                    <option value="50-75k">£50,000 - £75,000</option>
                    <option value="75-100k">£75,000 - £100,000</option>
                    <option value="100k+">£100,000+</option>
                  </select>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="experience">Business Experience*</label>
                  <select id="experience" class="form-control" required>
                    <option value="">Select Experience</option>
                    <option value="none">No Prior Business Ownership</option>
                    <option value="some">Some Business Experience</option>
                    <option value="extensive">
                      Extensive Business Experience
                    </option>
                    <option value="logistics">
                      Logistics Industry Experience
                    </option>
                  </select>
                </div>
              </div>
              <div class="col-md-12 mb-4">
                <div class="form-group">
                  <label for="message"
                    >Why are you interested in a Steph Logistics
                    franchise?*</label
                  >
                  <textarea
                    id="message"
                    class="form-control"
                    rows="5"
                    required
                  ></textarea>
                </div>
              </div>
