<%- include('../layouts/admin-header', { title: "Error 500", path:
"/admin/error" }) %>

<div class="dashboard-content">
  <div class="text-center py-5">
    <div class="display-1 text-danger mb-4">
      <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h1 class="display-4 mb-4">Server Error</h1>
    <p class="lead mb-3">Oops! Something went wrong on our end.</p>

    <% if (error) { %>
    <div
      class="alert alert-danger mx-auto my-4"
      style="max-width: 800px; text-align: left"
    >
      <h5 class="fw-bold mb-3">Error Details:</h5>
      <p class="mb-2"><strong>Message:</strong> <%= error.message %></p>
      <% if (error.stack) { %>
      <div class="mt-3">
        <p class="mb-1"><strong>Stack Trace:</strong></p>
        <pre
          class="bg-light p-3 rounded small"
          style="max-height: 200px; overflow-y: auto"
        >
<%= error.stack %></pre
        >
      </div>
      <% } %>
    </div>
    <% } %>

    <div class="mt-5 d-flex justify-content-center">
      <a href="/admin/dashboard" class="btn btn-primary mx-2">
        <i class="fas fa-home me-2"></i>
        Go to Dashboard
      </a>
      <button
        onclick="window.location.reload()"
        class="btn btn-outline-secondary mx-2"
      >
        <i class="fas fa-sync-alt me-2"></i>
        Try Again
      </button>
    </div>
  </div>
</div>

<%- include('../layouts/admin-footer') %>
