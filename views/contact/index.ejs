<!-- Start Contact Form Area -->
<section class="trucker__contact-form-area">
  <div class="trucker__container">
    <div class="trucker__contact-form-wrapper">
      <div class="trucker__title-wrapper">
        <h2 class="trucker__main-title text-center wow img-custom-anim-right">
          Get In Touch With Us
        </h2>
        <p class="text-center mb-4 wow img-custom-anim-top">
          We value your inquiries and are committed to providing timely
          responses. Please complete the form below and our team will get back
          to you promptly.
        </p>

        <div class="trucker__contact-form-inner wow img-custom-anim-top">
          <!-- Hidden iframe to prevent form refresh -->
          <iframe name="dummyframe" id="dummyframe" style="display: none"></iframe>

          <!-- Form with target to hidden iframe as additional prevention method -->
          <form id="contactPageForm" target="dummyframe">
            <div class="trucker__input-flexing">
              <div class="trucker__input-flexing-item">
                <span
                  class="trucker__input-field-name trucker__fs-17 trucker__fw-600 trucker__fm-jost trucker__deep-sea-blue">Name</span>
                <input type="text" id="contactName" name="name" placeholder="Type your name" required />
              </div>
              <div class="trucker__input-flexing-item">
                <span
                  class="trucker__input-field-name trucker__fs-17 trucker__fw-600 trucker__fm-jost trucker__deep-sea-blue">Phone</span>
                <input type="text" id="contactPhone" name="phone" placeholder="Type your phone number" required />
              </div>
            </div>
            <div class="trucker__input-flexing">
              <div class="trucker__input-flexing-item">
                <span
                  class="trucker__input-field-name trucker__fs-17 trucker__fw-600 trucker__fm-jost trucker__deep-sea-blue">Email</span>
                <input type="email" id="contactEmail" name="email" placeholder="Type your email" required />
              </div>
              <div class="trucker__input-flexing-item">
                <span
                  class="trucker__input-field-name trucker__fs-17 trucker__fw-600 trucker__fm-jost trucker__deep-sea-blue">Subject</span>
                <input type="text" id="contactSubject" name="subject" placeholder="Type your subject" required />
              </div>
            </div>
            <div class="trucker__input-textarea">
              <span
                class="trucker__input-field-name trucker__fs-17 trucker__fw-600 trucker__fm-jost trucker__deep-sea-blue">Message</span>
              <textarea id="contactMessage" name="message" placeholder="Type your message" required></textarea>
            </div>

            <div class="trucker__input-form-submit text-center">
              <button type="button" id="contactSubmitBtn" class="trucker__btn-style-1" onclick="(function() {
                  console.log('Direct inline submission');
                  const form = document.getElementById('contactPageForm');
                  const submitBtn = document.getElementById('contactSubmitBtn');
                  const btnText = document.getElementById('contactBtnText');
                  const btnIcon = document.getElementById('contactBtnIcon');
                  const spinner = document.getElementById('contactSpinner');
                  const statusWrapper = document.getElementById('formSubmitStatus');
                  const successStatus = document.getElementById('formSubmitSuccess');
                  const errorStatus = document.getElementById('formSubmitError');
                  const errorText = document.getElementById('formErrorText');
                  
                  if (!form.checkValidity()) {
                    form.reportValidity();
                    return false;
                  }
                  
                  statusWrapper.classList.add('d-none');
                  successStatus.classList.add('d-none');
                  errorStatus.classList.add('d-none');
                  
                  submitBtn.disabled = true;
                  btnText.textContent = 'Sending...';
                  btnIcon.classList.add('d-none');
                  spinner.classList.remove('d-none');
                  
                  const formData = {
                    name: document.getElementById('contactName').value,
                    email: document.getElementById('contactEmail').value,
                    phone: document.getElementById('contactPhone').value,
                    subject: document.getElementById('contactSubject').value,
                    message: document.getElementById('contactMessage').value
                  };
                  
                  fetch('/contact', {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json',
                      'X-Requested-With': 'XMLHttpRequest',
                      'Accept': 'application/json'
                    },
                    body: JSON.stringify(formData),
                    credentials: 'same-origin'
                  })
                  .then(function(response) {
                    return response.json().then(function(data) {
                      return { ...data, status: response.status, ok: response.ok };
                    }).catch(function(err) {
                      return { 
                        success: false, 
                        message: 'Unexpected server response format', 
                        status: response.status, 
                        ok: response.ok 
                      };
                    });
                  })
                  .then(function(data) {
                    statusWrapper.classList.remove('d-none');
                    
                    if (data.ok && data.success) {
                      successStatus.classList.remove('d-none');
                      form.reset();
                    } else {
                      errorText.textContent = data.message || 'Failed to send message. Please try again.';
                      errorStatus.classList.remove('d-none');
                    }
                    
                    statusWrapper.scrollIntoView({
                      behavior: 'smooth',
                      block: 'center'
                    });
                  })
                  .catch(function(error) {
                    console.error('Fetch error:', error);
                    statusWrapper.classList.remove('d-none');
                    errorText.textContent = 'Network error. Please check your internet connection and try again.';
                    errorStatus.classList.remove('d-none');
                    statusWrapper.scrollIntoView({
                      behavior: 'smooth',
                      block: 'center'
                    });
                  })
                  .finally(function() {
                    setTimeout(function() {
                      submitBtn.disabled = false;
                      btnText.textContent = 'Submit Now';
                      btnIcon.classList.remove('d-none');
                      spinner.classList.add('d-none');
                    }, 800);
                  });
                  
                  return false;
                })(); return false;">
                <span id="contactBtnText">Submit Now</span>
                <i class="fa-light fa-arrow-up-right" id="contactBtnIcon"></i>
                <i class="fa-regular fa-spinner fa-spin d-none" id="contactSpinner"></i>
              </button>
            </div>

            <p class="trucker__form-note text-center mt-3" style="margin-top: 15px; font-size: 14px; color: #666">
              <i class="fa-regular fa-envelope"></i> Upon submission, you will
              receive a confirmation email with reference details.
            </p>

            <!-- Large visible success indicator -->
            <div id="formSubmitStatus" class="trucker__form-status-wrapper d-none">
              <div id="formSubmitSuccess" class="trucker__form-status-success d-none">
                <div class="trucker__status-icon">
                  <i class="fa-solid fa-circle-check"></i>
                </div>
                <div class="trucker__status-message">
                  <h4>Message Sent Successfully!</h4>
                  <p>
                    Thank you for contacting us. We've sent a confirmation email
                    to your address. Our team will review your message and
                    respond to your inquiry shortly.
                  </p>
                </div>
              </div>
              <div id="formSubmitError" class="trucker__form-status-error d-none">
                <div class="trucker__status-icon">
                  <i class="fa-solid fa-circle-exclamation"></i>
                </div>
                <div class="trucker__status-message">
                  <h4>Error Sending Message</h4>
                  <p id="formErrorText">
                    There was a problem sending your message. Please try again.
                  </p>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Contact Form Area -->

