<!-- Track Shipment Area -->
<div class="tracking-container">
  <div class="tracking-wrapper">
    <!-- Tracking Form Section -->
    <div class="tracking-form-section">
      <div class="tracking-header">
        <h1>Track Your Shipment</h1>
        <p>
          Enter your tracking number to get real-time updates on your shipment
        </p>
      </div>
      <div class="tracking-form">
        <form id="tracking-form">
          <div class="form-group">
            <label for="trackingNumber">Tracking Number</label>
            <div class="input-group">
              <input
                type="text"
                id="trackingNumber"
                placeholder="Enter your tracking number"
                required
              />
              <button type="submit" class="track-button">
                <span>Track</span>
                <i class="fa-light fa-arrow-up-right"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Tracking Result Section -->
    <div class="tracking-result-section">
      <!-- Shipment Overview -->
      <div class="shipment-overview">
        <div class="overview-header">
          <div class="tracking-number">
            <span class="label">Tracking Number</span>
            <div class="tracking-number">
              <h3>SL12345678</h3>
            </div>
            <button class="copy-btn">
              <i class="fa-light fa-copy"></i>
            </button>
          </div>
          <div class="status-badge in-transit">
            <i class="fa-light fa-truck"></i>
            <span>In Transit</span>
          </div>
        </div>

        <div class="progress-timeline">
          <div class="progress-step completed">
            <div class="step-icon">
              <i class="fa-light fa-box"></i>
            </div>
            <div class="step-content">
              <span class="step-title">Order Placed</span>
              <span class="step-date">Mar 15, 2024</span>
            </div>
          </div>

          <div class="progress-step completed">
            <div class="step-icon">
              <i class="fa-light fa-warehouse"></i>
            </div>
            <div class="step-content">
              <span class="step-title">Processing</span>
              <span class="step-date">Mar 16, 2024</span>
            </div>
          </div>

          <div class="progress-step active">
            <div class="step-icon">
              <i class="fa-light fa-truck"></i>
            </div>
            <div class="step-content">
              <span class="step-title">In Transit</span>
              <span class="step-date">Mar 17, 2024</span>
            </div>
          </div>

          <div class="progress-step">
            <div class="step-icon">
              <i class="fa-light fa-house"></i>
            </div>
            <div class="step-content">
              <span class="step-title">Delivered</span>
              <span class="step-date">Estimated: Mar 20, 2024</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Shipment Details -->
      <div class="shipment-details">
        <div class="details-grid">
          <div class="detail-card">
            <div class="card-header">
              <i class="fa-light fa-location-dot"></i>
              <h4>Origin</h4>
            </div>
            <div class="card-content">
              <p class="address">123 Business Park, Suite 200</p>
              <p class="city">London, UK</p>
              <p class="postal">SW1A 1AA</p>
            </div>
          </div>

          <div class="detail-card">
            <div class="card-header">
              <i class="fa-light fa-location-dot"></i>
              <h4>Destination</h4>
            </div>
            <div class="card-content">
              <p class="address">456 Commerce Street</p>
              <p class="city">Manchester, UK</p>
              <p class="postal">M1 1AA</p>
            </div>
          </div>

          <div class="detail-card">
            <div class="card-header">
              <i class="fa-light fa-truck-fast"></i>
              <h4>Carrier</h4>
            </div>
            <div class="card-content">
              <p class="carrier">Steph Logistics</p>
              <p class="service">Express Delivery</p>
            </div>
          </div>

          <div class="detail-card">
            <div class="card-header">
              <i class="fa-light fa-box-open"></i>
              <h4>Package</h4>
            </div>
            <div class="card-content">
              <p class="dimensions">30 x 20 x 15 cm</p>
              <p class="weight">2.5 kg</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Recent Updates -->
      <div class="recent-updates">
        <h3>Recent Updates</h3>
        <div class="updates-timeline">
          <div class="update-item">
            <div class="update-icon">
              <i class="fa-light fa-truck"></i>
            </div>
            <div class="update-content">
              <div class="update-header">
                <span class="update-title">In Transit</span>
                <span class="update-time">2 hours ago</span>
              </div>
              <p class="update-location">Manchester Distribution Center</p>
              <p class="update-note">
                Package is on its way to the final destination
              </p>
            </div>
          </div>

          <div class="update-item">
            <div class="update-icon">
              <i class="fa-light fa-warehouse"></i>
            </div>
            <div class="update-content">
              <div class="update-header">
                <span class="update-title">Processing</span>
                <span class="update-time">1 day ago</span>
              </div>
              <p class="update-location">London Warehouse</p>
              <p class="update-note">
                Package has been processed and is ready for dispatch
              </p>
            </div>
          </div>

          <div class="update-item">
            <div class="update-icon">
              <i class="fa-light fa-box"></i>
            </div>
            <div class="update-content">
              <div class="update-header">
                <span class="update-title">Order Received</span>
                <span class="update-time">2 days ago</span>
              </div>
              <p class="update-location">London Warehouse</p>
              <p class="update-note">
                Package has been received at our facility
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
