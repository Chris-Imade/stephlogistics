    /* Modern Color Scheme and Variables */
    :root {
      --primary: #2a9d8f;
      --primary-light: #4895ef;
      --primary-dark: #0c3c37;
      --secondary: #4cc9f0;
      --accent: #f72585;
      --success: #06d6a0;
      --warning: #ffd166;
      --danger: #ef476f;
      --dark: #1b263b;
