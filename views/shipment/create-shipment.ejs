      max-width: 900px;
      margin: 0 auto;
    }

    .card {
      background-color: var(--white);
      border-radius: var(--radius);
      box-shadow: var(--shadow-lg);
      overflow: hidden;
      margin-bottom: 2rem;
      border: 1px solid var(--gray-200);
    }

    /* Header */
    .card-header {
