<style>
  /* Quote Page Styles */
  .quote-calculator-wrapper,
  .quote-results-wrapper,
  .checkout-wrapper {
    background-color: #fff;
    transition: all 0.3s ease;
  }

  .quote-title {
    color: #2a9d8f;
    font-weight: 700;
  }

  .form-section-title {
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
    color: #2a9d8f;
  }

  .quote-form .form-control {
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .quote-form label {
    margin-bottom: 8px;
    font-weight: 500;
  }

  .shipping-option {
    border: 1px solid #eee;
    transition: all 0.3s ease;
    background-color: #f8f9fa;
  }

  .shipping-option:hover {
    border-color: #2a9d8f;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }

  .shipping-option-name {
    color: #2a9d8f;
    margin-bottom: 5px;
  }

  .shipping-option-price .price {
    color: #1a1a1a;
    font-weight: 700;
  }

  .shipping-features {
    margin-top: 10px;
  }

  .order-summary {
    height: 100%;
  }

  /* Payment method styles */
  .payment-options {
    margin-bottom: 20px;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .shipping-option {
      flex-direction: column;
    }

    .shipping-option-price {
      margin-top: 15px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const quoteForm = document.getElementById("quote-form");
    const quoteResults = document.getElementById("quote-results");
    const checkoutSection = document.getElementById("checkout-section");
    const standardPrice = document.getElementById("standard-price");
    const expressPrice = document.getElementById("express-price");
    const premiumPrice = document.getElementById("premium-price");
    const selectOptionButtons = document.querySelectorAll(".select-option");
    const completeBookingButton = document.getElementById("complete-booking");

    // Payment method toggle
    const creditCardRadio = document.getElementById("creditCard");
    const paypalRadio = document.getElementById("paypal");
    const gocardlessRadio = document.getElementById("gocardless");
    const creditCardDetails = document.getElementById("creditCardDetails");

    if (creditCardRadio && paypalRadio && gocardlessRadio) {
      creditCardRadio.addEventListener("change", togglePaymentDetails);
      paypalRadio.addEventListener("change", togglePaymentDetails);
      gocardlessRadio.addEventListener("change", togglePaymentDetails);
    }

    function togglePaymentDetails() {
      if (creditCardRadio.checked) {
        creditCardDetails.style.display = "block";
      } else {
        creditCardDetails.style.display = "none";
      }
    }

    // Simulate quote calculation
    if (quoteForm) {
      quoteForm.addEventListener("submit", function (e) {
        e.preventDefault();

        // Get form values
        const weight = parseFloat(document.getElementById("weight").value) || 1;
        const length =
          parseFloat(document.getElementById("length").value) || 20;
        const width = parseFloat(document.getElementById("width").value) || 15;
        const height =
          parseFloat(document.getElementById("height").value) || 10;
        const quantity =
          parseInt(document.getElementById("quantity").value) || 1;
        const value = parseFloat(document.getElementById("value").value) || 50;
        const isInsurance = document.getElementById("insurance").checked;
        const isSignature = document.getElementById("signature").checked;
        const isExpress = document.getElementById("express").checked;

        // Calculate volumetric weight
        const volumetricWeight = (length * width * height) / 5000;
        const chargeableWeight = Math.max(weight, volumetricWeight);

        // Calculate base prices
        let standardBasePrice = 15 + chargeableWeight * 3 * quantity;
        let expressBasePrice = standardBasePrice * 1.5;
        let premiumBasePrice = standardBasePrice * 2.2;

        // Add insurance if selected
        if (isInsurance) {
          const insuranceAmount = value * 0.02;
          standardBasePrice += insuranceAmount;
          expressBasePrice += insuranceAmount;
          premiumBasePrice += insuranceAmount;
        }

        // Add signature if selected
        if (isSignature) {
          standardBasePrice += 2;
          expressBasePrice += 2;
          premiumBasePrice += 2;
        }

        // Add express if selected
        if (isExpress) {
          standardBasePrice += 15;
          expressBasePrice += 15;
          premiumBasePrice += 15;
        }

        // Update the price displays
        standardPrice.textContent = `£${standardBasePrice.toFixed(2)}`;
        expressPrice.textContent = `£${expressBasePrice.toFixed(2)}`;
        premiumPrice.textContent = `£${premiumBasePrice.toFixed(2)}`;

        // Show the results section
        quoteResults.style.display = "block";

        // Scroll to results
        quoteResults.scrollIntoView({ behavior: "smooth" });
      });
    }

    // Handle option selection
    if (selectOptionButtons) {
      selectOptionButtons.forEach((button) => {
        button.addEventListener("click", function () {
          const option = this.getAttribute("data-option");
          let optionName = "Standard Delivery";
          let price = standardPrice.textContent;

          if (option === "express") {
            optionName = "Express Delivery";
            price = expressPrice.textContent;
          } else if (option === "premium") {
            optionName = "Next Day Delivery";
            price = premiumPrice.textContent;
          }

          // Update the order summary
          document.getElementById("summary-option").textContent = optionName;
          document.getElementById("summary-base-price").textContent = price;
          document.getElementById("summary-total").textContent = price;

          // Get origin and destination
          const originPostcode =
            document.getElementById("originPostcode").value || "London";
          const originCountry =
            document.getElementById("originCountry").options[
              document.getElementById("originCountry").selectedIndex
            ].text;
          const destinationPostcode =
            document.getElementById("destinationPostcode").value ||
            "Manchester";
          const destinationCountry =
            document.getElementById("destinationCountry").options[
              document.getElementById("destinationCountry").selectedIndex
            ].text;

          // Update summary
          document.getElementById(
            "summary-origin"
          ).textContent = `${originPostcode}, ${originCountry}`;
          document.getElementById(
            "summary-destination"
          ).textContent = `${destinationPostcode}, ${destinationCountry}`;

          // Package details
          const weight = document.getElementById("weight").value || "1";
          const length = document.getElementById("length").value || "20";
          const width = document.getElementById("width").value || "15";
          const height = document.getElementById("height").value || "10";
          document.getElementById(
            "summary-package"
          ).textContent = `${weight}kg, ${length}x${width}x${height}cm`;

          // Show checkout section
          checkoutSection.style.display = "block";

          // Scroll to checkout
          checkoutSection.scrollIntoView({ behavior: "smooth" });
        });
      });
    }

    // Handle booking completion
    if (completeBookingButton) {
      completeBookingButton.addEventListener("click", function (e) {
        e.preventDefault();

        const termsAgreed = document.getElementById("termsAgree").checked;

        if (!termsAgreed) {
          alert("Please agree to the Terms and Conditions");
          return;
        }

        // Simulate payment processing
        completeBookingButton.disabled = true;
        completeBookingButton.innerHTML =
          'Processing <i class="fa-light fa-spinner fa-spin"></i>';

        setTimeout(() => {
          alert(
            "Your booking has been completed! A confirmation email will be sent shortly."
          );
          window.location.href = "/";
        }, 2000);
      });
    }
  });
</script>
