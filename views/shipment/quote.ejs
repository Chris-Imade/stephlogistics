<!-- Quote Calculator Area -->
<div class="trucker__section-padding">
  <div class="trucker__container">
    <div class="row">
      <div class="col-lg-12">
        <div class="quote-intro text-center mb-5">
          <h2 class="quote-title mb-4">Get an Instant Shipping Quote</h2>
          <p class="quote-description">
            Enter your shipment details below to get an instant quote for your
            delivery needs. We offer competitive rates for both domestic and
            international shipping.
          </p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="quote-calculator-wrapper p-4 rounded shadow">
          <form id="quote-form" class="quote-form">
            <div class="row">
              <!-- Shipment Type Selection -->
              <div class="col-md-12 mb-4">
                <div class="form-group">
                  <label>Shipment Type</label>
                  <div class="shipment-type-options d-flex">
                    <div class="form-check me-4">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="shipmentType"
                        id="parcelOption"
                        value="parcel"
                        checked
                      />
                      <label class="form-check-label" for="parcelOption"
                        >Parcel</label
                      >
                    </div>
                    <div class="form-check me-4">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="shipmentType"
                        id="palletOption"
                        value="pallet"
                      />
                      <label class="form-check-label" for="palletOption"
                        >Pallet</label
                      >
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="shipmentType"
                        id="freightOption"
                        value="freight"
                      />
                      <label class="form-check-label" for="freightOption"
                        >Freight</label
                      >
                    </div>
                  </div>
                </div>
              </div>

              <!-- Origin and Destination -->
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="originPostcode">Origin Postcode*</label>
                  <input
                    type="text"
                    id="originPostcode"
                    class="form-control"
                    required
                  />
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="destinationPostcode">Destination Postcode*</label>
                  <input
                    type="text"
                    id="destinationPostcode"
                    class="form-control"
                    required
                  />
                </div>
              </div>

              <!-- Country Selection -->
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="originCountry">Origin Country*</label>
                  <select id="originCountry" class="form-control" required>
                    <option value="UK" selected>United Kingdom</option>
                    <option value="FR">France</option>
                    <option value="DE">Germany</option>
                    <option value="IT">Italy</option>
                    <option value="ES">Spain</option>
                    <option value="US">United States</option>
                    <option value="CA">Canada</option>
                    <option value="AU">Australia</option>
                  </select>
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="destinationCountry">Destination Country*</label>
                  <select id="destinationCountry" class="form-control" required>
                    <option value="UK" selected>United Kingdom</option>
                    <option value="FR">France</option>
                    <option value="DE">Germany</option>
                    <option value="IT">Italy</option>
                    <option value="ES">Spain</option>
                    <option value="US">United States</option>
                    <option value="CA">Canada</option>
                    <option value="AU">Australia</option>
                  </select>
                </div>
              </div>

              <!-- Package Details -->
              <div class="col-md-12 mb-4">
                <h5 class="form-section-title">Package Details</h5>
              </div>

              <!-- Weight -->
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="weight">Weight (kg)*</label>
                  <input
                    type="number"
                    id="weight"
                    min="0.1"
                    step="0.1"
                    class="form-control"
                    required
                  />
                </div>
              </div>

              <!-- Dimensions -->
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="length">Dimensions (cm)</label>
                  <div class="input-group">
                    <input
                      type="number"
                      id="length"
                      placeholder="Length"
                      min="1"
                      class="form-control"
                      required
                    />
                    <input
                      type="number"
                      id="width"
                      placeholder="Width"
                      min="1"
                      class="form-control"
                      required
                    />
                    <input
                      type="number"
                      id="height"
                      placeholder="Height"
                      min="1"
                      class="form-control"
                      required
                    />
                  </div>
                </div>
              </div>

              <!-- Quantity and Value -->
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="quantity">Quantity*</label>
                  <input
                    type="number"
                    id="quantity"
                    min="1"
                    value="1"
                    class="form-control"
                    required
                  />
                </div>
              </div>
              <div class="col-md-6 mb-4">
                <div class="form-group">
                  <label for="value">Declared Value (£)*</label>
                  <input
                    type="number"
                    id="value"
                    min="1"
                    class="form-control"
                    required
                  />
                </div>
              </div>

              <!-- Service Options -->
              <div class="col-md-12 mb-4">
                <h5 class="form-section-title">Service Options</h5>
                <div class="service-options">
                  <div class="form-check mb-2">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="insurance"
                    />
                    <label class="form-check-label" for="insurance">
                      Insurance (+ 2% of declared value)
                    </label>
                  </div>
                  <div class="form-check mb-2">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="signature"
                    />
                    <label class="form-check-label" for="signature">
                      Signature Required (+ £2.00)
                    </label>
                  </div>
                  <div class="form-check mb-2">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="express"
                    />
                    <label class="form-check-label" for="express">
                      Express Delivery (+ £15.00)
                    </label>
                  </div>
                </div>
              </div>

              <div class="col-md-12 text-center">
                <button
                  type="submit"
                  class="trucker__btn-style-1"
                  id="calculate-button"
                >
                  Calculate Quote <i class="fa-light fa-calculator"></i>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

